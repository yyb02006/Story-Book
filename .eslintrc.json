{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:tailwindcss/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      { "endOfLine": "auto", "tailwindConfig": "./tailwind.config.ts" }
    ], // plugin:prettier/recommended(eslint-plugin-prettier)
    "@typescript-eslint/explicit-function-return-type": "off", // 함수의 반환 타입 명시 요구 off
    "@typescript-eslint/no-unused-vars": "warn", // 사용되지 않는 변수를 허용하지 않음 off
    "tailwindcss/no-custom-classname": "warn" // tailwindcss가 아닌 classname에 대해 경고
  }
}
